{
    "name": "y0zh/tron-api",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/y0zh/tron-api",
    "keywords": [
        "iexbase",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

    "require": {
        "php": ">=8.0",
        "comely-io/data-types": "^1.0",
        "guzzlehttp/guzzle": "^7.2",
        "iexbase/web3.php": "^2.0.1",
        "kornrunner/secp256k1": "^0.2",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "y0zh\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "yozh\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
